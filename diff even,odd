#include <stdio.h>
#include<stdlib.h>
void main()
{
    int i,n,sum=0,sum1=0;
    printf("enter n:");
    scanf("%d",&n);
    for(i=1;i<=n;++i)
    {
        if(i%2==0)
        {
            sum=sum+i;
        }
        else
        {
            sum1=sum1+i;
        }
    }
    printf("the difference is %d",abs(sum1-sum));
}
